{
  "name": "Order",
  "type": "object",
  "properties": {
    "customer_name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "emirate": {
      "type": "string"
    },
    "product_model": {
      "type": "string"
    },
    "quantity": {
      "type": "number",
      "default": 1
    },
    "total_amount": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "confirmed",
        "shipped",
        "delivered"
      ],
      "default": "pending"
    },
    "order_notes": {
      "type": "string"
    }
  },
  "required": [
    "customer_name",
    "email",
    "product_model",
    "total_amount"
  ]
}
